<?xml version="1.0" encoding="utf-8"?>
<mdscript name="ResearchBlueprintsMod" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="md.xsd">
  <cues>
    <cue name="DiablogOptions" instantiate="true">
      <conditions>
        <event_conversation_started conversation="default" actor="md.$PersistentCharacters.$BosoTa"/>
      </conditions>
      <actions>
        <add_player_choice text="'choice1'" section="Researchblueprintssec1" />
        <add_player_choice text="'choice2'" section="Researchblueprintssec2" />
      </actions>
    </cue>
    <cue name="Researchblueprintssec1_handler" instantiate="true">
      <conditions>
        <check_any>
          <event_conversation_next_section section="Researchblueprintssec1"/>
          <event_conversation_returned_to_section section="Researchblueprintssec1"/>
        </check_any>
      </conditions>
      <actions>
        <show_notification text="'Choice 1'" sound="notification_warning" />
        <add_encyclopedia_entry type="researchables" item="'rbm_consumables_1'"/>
<!--         <remove_research ware="ware.rbm_testware" />
        <get_ware_definition result="$wares" flags="blueprint"/>
        <add_blueprints wares="$wares"/> -->
      </actions>
    </cue>
    <cue name="Researchblueprintssec2_handler" instantiate="true">
      <conditions>
        <check_any>
          <event_conversation_next_section section="Researchblueprintssec2"/>
          <event_conversation_returned_to_section section="Researchblueprintssec2"/>
        </check_any>
      </conditions>
      <actions>
        <debug_to_file name="'modules'" directory="'RBM'" text="'init'" append="false"/>
        <get_ware_definition result="$wares" flags="allowplayerblueprint"/>
<!--         <do_for_each in="$wares" name="$ware">
          <do_if value="$ware.hastag.noplayerbuild or $ware.hastag.noblueprint" negate="true">
            <debug_to_file name="'modules'" directory="'RBM'" text="'%s, %s'.[$ware.id, $ware.name]"/>
          </do_if>
        </do_for_each>
 -->        <add_blueprints wares="$wares"/>
      </actions>
    </cue>
  </cues>
</mdscript>
